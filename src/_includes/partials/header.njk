<header>
  <div class="bg"></div>
  <nav class="container">
    <div class="navbar">
      <a class="home" href="{{ '/' | url }}" aria-label="Pi-Apps">
        <picture>
          <source srcset="/img/logo-text.svg" media="(prefers-color-scheme: dark)">
          <img src="/img/logo-text.svg" alt="Pi-Apps logo" style="height: 4em; width: 12em" />
        </picture>
      </a>
      <ul class="main-menu">
        {%- for entry in collections.nav | eleventyNavigation %}
        <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
          <a href="{{ entry.url | url }}">{{ entry.title }}</a>
        </li>
        {%- endfor %}
      </ul>
    </div>
    <div class="links">
      <div class="social-links">
        <a href="https://discord.gg/RXSTvaUvuu" target="_blank" aria-label="Discord"><i class="fa fa-discord"></i></a>
        <a href="https://github.com/Botspot/pi-apps" target="_blank" aria-label="GitHub"><i class="fa fa-github"></i></a>
      </div>
      <div>
        <a class="button" href="{{ '/install/' | url }}">Install</a>
      </div>
    </div>
  </nav>

  {% if hero %}
  <div class="hero-body">
    <div class="row container">
      <div class="column">
        <div class="hero-description">
          <h1 class="hero-title">{{ hero.title }}</h1>
          <p class="subtitle">{{ hero.description }}</p>
          {%- if hero.button %}
          <br>
          <a class="button size-large" href="{{ hero.button.url | url }}">{{ hero.button.content }}</a>
          {%- endif %}
        </div>
      </div>
      {%- if hero.image %}
      <div class="column">
        {% image hero.title, hero.image.light, hero.image.dark %}
      </div>
      {%- endif %}
    </div>
  </div>
  {% endif %}
</header>
